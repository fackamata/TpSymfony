{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ evenement.image }}</td>
            </tr>
            <tr>
                <th>PrixEntree</th>
                <td>{{ evenement.prixEntree }}</td>
            </tr>
            <tr>
                <th>oeuvre</th>
                <td>
                    {% for oeuvre in evenement.oeuvre %}
                        {{ oeuvre.nom }}
                        {{ not loop.last ? ' / ' }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Invit√©s</th>
                <td>
                    {% for user in evenement.user %}
                        {{ user.username }}
                        {{ not loop.last ? ' / ' }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('evenement_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>

    {{ include('admin/evenement/_delete_form.html.twig') }}
{% endblock %}
